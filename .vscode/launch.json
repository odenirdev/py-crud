    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUG: BACKEND",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "args": [
                "server:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--workers",
                "2",
                "--log-level",
                "error",
                "--reload-delay",
                "2"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        },
    ]
}